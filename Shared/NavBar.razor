
@inject SortingComponentBase sortComponent

<div class="navbar">
    <button @onclick="@(e => sortComponent.FillArray())">New Array</button>
    <button @onclick="@(e => CallBubbleSort())">Bubble Sort</button>
    <button @onclick="@(e => sortComponent.RunSort())">Run</button>
</div>

@code{
    public void CallBubbleSort()
    {
        sortComponent.bubbleSort = true;
    }
    public void CallMergeSort()
    {
        sortComponent.mergeSort = true;
    }
}